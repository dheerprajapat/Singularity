                <progress style="height:2px;margin-top:-10px;width:100%;padding-left:12px;padding-right:12px" value="10" max="100" />
            </div>
            <div style="display:flex;flex-direction:column;align-items:flex-start;margin-left:10px;color:white;">
                <p><b>Pal Pal Dil Ke Paas Tum Rehte ho</b></p>
                <p>Kishore Kumar</p>
                <div></div>
            </div>
            <div class="music-control" style="">
                <img src="./images/backward.svg" height="32" width="32" />
                <img src="./images/play.svg" height="32" width="32" />
                <img src="./images/forward.svg" height="32" width="32" />
            </div>

        </div>
    }
    else
    {
        <div class="controls" @onclick="ToggleMusicView">
            <img class="img" src="https://yt3.googleusercontent.com/VzKX7I0iD2eEHoWqk2drqOTFsPWX6hTGul0drSXXde8hWEcYNq7H_VdWHBC5RDawV_LoUBmD=s900-c-k-c0x00ffffff-no-rj" />
            <div style="display:flex;flex-direction:column;align-items:flex-start;margin-left:10px;color:white">
                <p><b>Pal Pal Dil Ke Paas Tum Rehte ho</b></p>
                <p>Kishore Kumar</p>
                <div></div>
            </div>
            <img src="./images/play.svg" height="32" width="32" />
        </div>
        <progress style="height:2px;margin-top:-10px;width:100%;padding-left:12px;padding-right:12px" value="10" max="100" />
    }
</Glass>
    



@code {
    private bool isMusicViewActive { get; set; } = false;

    private void ToggleMusicView()
    {
        isMusicViewActive = !isMusicViewActive;
    }
}


