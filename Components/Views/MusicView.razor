    @if (isMusicViewActive)
    {
        <div class="toggle-controls" @onclick="ToggleMusicView">

            <img class="cover-image" src="https://yt3.googleusercontent.com/VzKX7I0iD2eEHoWqk2drqOTFsPWX6hTGul0drSXXde8hWEcYNq7H_VdWHBC5RDawV_LoUBmD=s900-c-k-c0x00ffffff-no-rj" />
