<ScollableModalView OnCloseButtonClick="SetClose" IsActive="@IsVisible">
    <div class="scroll-child">
        <div style="height: 10%;">
            <p style="color:white;"><b>Give your playlist a name</b></p>
        </div>
        <div style="height: 20%;">
            <input @bind="playlistName" class="inpt" maxlength="50"/>
        </div>
        <div style="height: 10%;">
            <button class="btn" style="width:100px;color:white;background-color:deeppink;margin-top:10px" @onclick="CreateNewPlaylist"
            >Create</button>
        </div>

    </div>
</ScollableModalView>


<style>
    .scroll-child {
        height: 56%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .btn {
        margin: 0 12px;
        padding: 10px 0;
        border: none;
        border-radius: 25px;
        font-weight: 700;
    }

    .inpt {
        padding: 10px;
        margin: 10px 10px;
        background: 0;
        width: 250px;
        outline: 0;
        border: 0;
        border-bottom: 2px solid rgba(255,255,255, 0.3);
        margin: 20px 0;
