<Glass Blur="20" BackgroundColor="@GetStyle()" Style="padding:16px 6px;border-radius:15px;margin:4px;" Clicked="() => Clicked.InvokeAsync()">
    <div style="display:flex;justify-content:space-between;">
        <div class="detail-list" style="">
            <p style="font-weight:bold" class="ellepsis-list">@Title</p>
            <div class="ellepsis-list" style="display:flex;justify-content:space-between">
                <span style="margin:3px;font-weight:bold">@Description</span>
            </div>
        </div>
        <div style="width: 32px;height: 32px;">
            <img class="cover-img-list" src="@Icon" />
        </div>
    </div>
</Glass>

    <style>
        .detail-list {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            justify-items: left;
            align-content: space-between;
            align-items: start;
            margin: 0px 10px;
        }

        .cover-img-list {
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 28px;
            height: 28px;
        }
    </style>
