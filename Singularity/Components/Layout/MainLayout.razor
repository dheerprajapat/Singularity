@inherits LayoutComponentBase
@inject IAuthenticatonService AuthService
@inject NavigationManager NavManager
@inject IJSRuntime Runtime
@if (!UserAuthStateRead)
{

    <div style="display:flex;justify-content:center;margin-top:100px;width:100vw">
        <MusicBar UseLargeSize="true" />
    </div>
}
else if(User==null)
{
    @Body
}
else
{
    <div class="layout">
        <div class="child">
            @Body
        </div>
        <NavMenu />
    </div>

}



<style>

    .layout {
        position: relative;
        overflow: hidden;
        height: 100vh;
        width: 100%;
    }

        .layout .child {
            object-fit: cover;
            position: absolute;
            top: 0;
            left: 0;
            height: calc(100% - 60px);
            width: 100%;
            transition: opacity 0.4s ease;
        }

    body, html {
        background: url(./images/background2.jpg) no-repeat center center fixed;
        background-size: cover;
        text-align: center;
        overflow-x: hidden;
    }
</style>