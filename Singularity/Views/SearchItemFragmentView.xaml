<UserControl
    x:Class="Singularity.Views.SearchItemFragmentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Singularity.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:Singularity.Models"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <TextBlock Text="{x:Bind ViewModel.Header,Mode=OneWay}" FontWeight="Bold" FontSize="20"/>
        <ListView ItemsSource="{x:Bind ViewModel.SearchItems, Mode=OneWay}" SelectionMode="Single"
                  SelectionChanged="ListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:SearchFragmentItem">
                    <StackPanel Orientation="Horizontal">
                        <Image 
                            Source="{x:Bind ThumbnailUrl, Mode=OneWay}" 
                                Width="80" Height="80" x:Name="thumnailImg"/>
                        <StackPanel Orientation="Vertical" Spacing="2" Margin="5 5 5 5" Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock FontSize="16" FontWeight="SemiBold" Text="{x:Bind Name, Mode=OneWay}" TextTrimming="CharacterEllipsis"/>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock FontSize="12" Text="{x:Bind MediaType, Mode=OneWay}" TextTrimming="CharacterEllipsis"/>
                                <FontIcon FontFamily="Segoe Fluent Icons" FontSize="11"
                                         Glyph="&#xe76c;"/>
                                <TextBlock FontSize="12" Text="{x:Bind ChannelName, Mode=OneWay}" TextTrimming="CharacterEllipsis"/>
                                <FontIcon FontFamily="Segoe Fluent Icons" FontSize="11" Visibility="{x:Bind HideDuration,Mode=OneWay}"
                                         Glyph="&#xe76c;"/>
                                <TextBlock FontSize="12" FontWeight="SemiBold" Text="{x:Bind Duration, Mode=OneWay}" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</UserControl>
