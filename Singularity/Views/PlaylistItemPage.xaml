<Page
    x:Class="Singularity.Views.PlaylistItemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winuiEx="using:CommunityToolkit.WinUI.UI.Media"
    xmlns:v="using:Singularity.Views"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="108"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid RowSpacing="10" Margin="6 -76 6 20">

            <Grid CornerRadius="10">
                <Image Source="{x:Bind ViewModel.Thumbnail,Mode=OneWay}"  Stretch="Fill"/>
                <Rectangle>
                    <Rectangle.Fill>
                        <winuiEx:BackdropBlurBrush Amount="20"/>
                    </Rectangle.Fill>
                </Rectangle>
                <StackPanel Orientation="Vertical" Margin="10" Spacing="10">
                    <TextBlock FontWeight="Bold" FontSize="24" 
                           Text="{x:Bind ViewModel.Title,Mode=OneWay}"/>
                    <TextBlock FontWeight="SemiBold" FontSize="20"
                           Text="{x:Bind ViewModel.Author,Mode=OneWay}"/>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0 10 10 10">
                        <Button Width="45" Height="45" CornerRadius="45" x:Name="playAllBtn">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xf5b0;" 
                              x:Name="PlayPauseIcon" Foreground="Coral"
                              VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                              FontSize="18" />
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
        <ScrollViewer Grid.Row="1">
            <v:SearchItemFragmentView ShowAllItems="True"
                Items="{x:Bind ViewModel.VideosInPlaylist,Mode=OneWay}"/>
        </ScrollViewer>
    </Grid>
</Page>
